            "parameters": {
                "account": 1685632
            },
            "mapper": {
                "cc": [],
                "to": [
                    "smartinvoicedigibpm@gmail.com"
                ],
                "bcc": [],
                "from": "",
                "html": "Dear Accounts Manager,  \n\nThe attached file needs further processsing or intervention. Please ensure that the invoice processing is done and payment is made within the next  30 days.\nThis is a system generated email.Please do not reply back to this mailbox.\n\nBest Regards,\nThe Smart Invoice Team",
                "subject": "Notification - {{1.name}}",
                "attachments": [
                    {
                        "cid": "",
                        "data": "{{1.data}}",
                        "fileName": "{{1.name}}"
                    }
                ]
            },
            "metadata": {
                "designer": {
